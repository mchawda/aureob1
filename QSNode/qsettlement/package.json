{
  "name": "quantum-settlement-node",
  "version": "1.0.0",
  "description": "Quantum Settlement Node - Programmable quantum-secure banking core",
  "main": "services/api/server.ts",
  "scripts": {
    "start": "node dist/services/api/server.js",
    "dev": "ts-node-dev --respawn --transpile-only services/api/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "deploy:contracts": "hardhat run scripts/deploy.js --network qsmart",
    "deploy:testnet": "hardhat run scripts/deploy-testnet.js --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy-mainnet.js --network mainnet",
    "verify:contracts": "hardhat verify --network qsmart",
    "compile:contracts": "hardhat compile",
    "test:contracts": "hardhat test",
    "coverage:contracts": "hardhat coverage",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "deploy:all": "npm run compile:contracts && npm run deploy:contracts && npm run build && npm run start",
    "docker:build": "docker build -t qsn-api .",
    "docker:run": "docker run -p 3000:3000 qsn-api",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "quantum",
    "settlement",
    "blockchain",
    "cryptocurrency",
    "defi",
    "banking",
    "compliance",
    "kyc",
    "aml"
  ],
  "author": "Aureo Systems",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "chai": "^4.3.10",
    "eslint": "^8.55.0",
    "ethereum-waffle": "^4.0.10",
    "hardhat": "^2.19.0",
    "jest": "^29.7.0",
    "solidity-coverage": "^0.8.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aureo-systems/quantum-settlement-node.git"
  },
  "bugs": {
    "url": "https://github.com/aureo-systems/quantum-settlement-node/issues"
  },
  "homepage": "https://github.com/aureo-systems/quantum-settlement-node#readme"
}
